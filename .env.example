# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=agribridge
DYNAMODB_ENDPOINT_URL=http://localhost:4566

# RDS PostgreSQL Configuration
RDS_HOST=localhost
RDS_PORT=5432
RDS_DATABASE=agribridge
RDS_USER=postgres
RDS_PASSWORD=password

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=localhost:9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-v2
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# S3 Configuration
S3_BUCKET_NAME=agribridge-storage
S3_ENDPOINT_URL=http://localhost:4566

# SNS Configuration
SNS_ENDPOINT_URL=http://localhost:4566

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security Configuration
JWT_SECRET_KEY=change-me-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption Configuration (leave empty for local dev)
ENCRYPTION_KEY_ID=

# Rate Limiting
SMS_RATE_LIMIT_PER_DAY=10

# Performance Configuration
MAX_CONCURRENT_QUERIES=10000
QUERY_TIMEOUT_SECONDS=30

# RAG Configuration
RAG_TOP_K=5
RAG_CONFIDENCE_THRESHOLD=0.7

# Geospatial Configuration
DEFAULT_SEARCH_RADIUS_KM=100
BUYER_MATCHING_RADIUS_KM=50
